@page
@model Trustchain.Pages.StatisticsModel
@{
    ViewData["Title"] = "Statistics";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Statistics</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3>Memory</h3>
            <p>Currently using: @Model.AutoSize(GC.GetTotalMemory(true))</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>Database</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Table
                        </th>
                        <th>
                            Count
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            Packages
                        </td>
                        <td>
                            @Model.DB.Packages.Count()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Trusts
                        </td>
                        <td>
                            @Model.DB.Trusts.Count()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Proofs
                        </td>
                        <td>
                            @Model.DB.Proofs.Count()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Timestamps
                        </td>
                        <td>
                            @Model.DB.Timestamps.Count()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Workflows
                        </td>
                        <td>
                            @Model.DB.Workflows.Count()
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>

